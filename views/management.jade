extends layout

block content

		#new_item.float_buttoncontainer( title='Agregar Usuario' )
			span.bg_plus.bgaccent_color
				
		.hidden_blockcontainer
			.hidden_blockback.bgaccent_color
			.hidden_block.bg_white
				span.close.bg_close.rippleria-dark( data-rippleria )
				.colhh1.bgprimary_color
					.colhh1.pd_8.bgprimary_colorDarker
					.pd_18.form_title.white_text Nuevo
				.colhh1.hb_formcontainer
					form( name='forum_new' )
						.pd12_24.border_bottom.flat_shadow.bgprimary_color
							.form_input.white_text
								select.activeline.txtaccent_colorfall(name='userType')
									option Alumno
									option Profesor
									option Departamento
									option Asignatura
						.pd_24
							.form_input
								.b_text.left_title Clave
								input(type='text', placeholder='Clave' name='userIdKey')
							.form_input
								.b_text.left_title Nombre(s)
								input(type='text', placeholder='Nombre(s)' name='userName')
							.form_input
								.b_text.left_title Apellidos
								.double
									input(type='text', placeholder='Paterno' name='userLastName')
									input.second(type='text', placeholder='Materno' name='userSecondLastName')
							.form_input
								.b_text.left_title Sexo
								select(name='userSex')
									option H
									option M
							.form_input
								.b_text.left_title Email
								input(type='email', placeholder='email@email.com' name='userEmail')
							.form_input
								.b_text.left_title Contraseña
								input(type='password', placeholder='*******' name='userPassword')
							.form_input(style='height: 52px;')
								span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
									input(type='submit', value='')

		.topspace
		.page_container
			.block_container
				.colhh1.profile_img2
					.photo
						a( href='/profile' )
							img.circle( src='images/profilephoto.png' )
					.name
						.pd_12 
							b Admin
							span Institución: CEFO

			.block_container.bg_white.h_listcontainer
				.colhh1.rel_pos.border_bottom
					.h_listline.bgaccent_color
					.h_listitem.first
						.pd_18.ll_title.rippleria-dark( data-rippleria ) Todo
					.h_listitem
						.pd_18.ll_title.rippleria-dark( data-rippleria ) Alumnos
					.h_listitem
						.pd_18.ll_title.rippleria-dark( data-rippleria ) Profesores
					.h_listitem
						.pd_18.ll_title.rippleria-dark( data-rippleria ) Asignatura
				.colhh1
					.search
						span.searchicon
						input#buscar(type='text',name='buscar', placeholder='Buscar una Persona o Asignatura')

				.colhh1.h_listindex.first
					.colhh1.listcontainer
						.colhh1.slide_list
