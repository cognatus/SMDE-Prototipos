											span.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color2.b_text(type='submit' value='Aceptar')
						form#show_subjectinsert.hidden_form( name='insert_new', action='insertSubject', method='post' )
							.pd_24
								.form_input
									.b_text.left_title Nombre
									input(type='text', placeholder='Nombre' name='insertSubjectName')
								.form_input
									.b_text.left_title Nivel
									input(type='text', placeholder='Nivel' name='insertSubjectLevel')
								.form_input
									.b_text.left_title Academia
									select.mgm_departmentslist(name='insertSubjectDept')
										if departmentsData != undefined
											each item in departmentsData
												option(value='#{item.idDepartment}') #{item.departmentName}
								.form_input(style='height: 52px;')
									span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
							.form_confirmblock
								.inner_confirmblock.bg_gray.flat_shadow
									.pd_24(style='padding-bottom: 16px;')
										.colhh1.white_text
											.pd_8.ll_title ¿Realizar esta acción?
