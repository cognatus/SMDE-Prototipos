											span.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color2.b_text(type='submit' value='Aceptar')
						form#show_subjectcourseinsert.hidden_form( name='insert_new', action='insertSubjectCourse', method='post' )
							.pd_24
								.form_input
									.b_text.left_title Asignatura
									select.mgm_subjectslist(name='insertSubjectCourseSId')
										if subjectsData != undefined
											each item in subjectsData
												option(value='#{item.idSubject}') #{item.subjectName}
								.form_input
									.b_text.left_title Grupo
									select.mgm_courseslist(name='insertSubjectCourseCId')
										if coursesData != undefined
											each item in coursesData
												option(value='#{item.idCourse}') #{item.courseName}
								.form_input(style='height: 52px;')
									span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
							.form_confirmblock
								.inner_confirmblock.bg_gray.flat_shadow
									.pd_24(style='padding-bottom: 16px;')
										.colhh1.white_text
											.pd_8.ll_title ¿Realizar esta acción?
									.pd_12
										.autooverflow
											span.submit_cancel.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color.b_text.hide_comfirm(type='button' value='Cancelar')
											span.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color2.b_text(type='submit' value='Aceptar')
		.topspace
		.page_container
			.block_container.bg_white.profile_bgcont(style='margin-bottom: 0;')
				.colhh1.profile_img
					.photo
						a(href='/profile')
							img.circle.flat_shadow(src='profile_photos/'+ datos[0].photoName +'.png')
				.pd_24
					.colhh1
						.name
							div #{datos[0].userName} #{datos[0].userLastName} #{datos[0].userSecondLastName}
							span 
								.b_text.autocol Institución: 
								| &nbsp; #{datos[0].instituteName}
			
			.h_listcontainer#managementData
				.block_container.bg_white.mgmlisthor.v_top
					.colhh1.rel_pos
						.h_listline.bgaccent_color
						#mgm_filter.h_listtopcontainer
							.autocol.h_listitem.first.vlist_bg.b_text(data-filter='Administrador')
								.pd_16.rippleria-dark( data-rippleria ) Administradores
							.autocol.h_listitem(data-filter='Alumno')
								.pd_16.rippleria-dark( data-rippleria ) Alumnos
