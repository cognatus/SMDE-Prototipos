extends layout

block content

		script( type='text/javascript' src='/js/ajax/ajaxManagement.js' )
			
		#new_item.float_buttoncontainer( title='Agregar Usuario' )
			span.bg_plus.bgaccent_color

		.hidden_blockcontainer
			.hidden_blockback.bgaccent_color
			.hidden_block.bg_white
				span.close.bg_close.rippleria-dark( data-rippleria )
				.colhh1.bgprimary_color
					.colhh1.pd_8.bgprimary_colorDarker
					.pd_18.form_title.white_text Nuevo
				.colhh1.hb_formcontainer
					.form_innercontainer
						.pd12_24.flat_shadow.bgprimary_color
							.form_input.white_text
								select#select_insertType.activeline.txtaccent_colorfall
									option(value='Student' selected) Alumno
									option(value='Teacher') Profesor
									option(value='Department') Academia
									option(value='Subject') Asignatura
									option(value='Course') Grupo
									option(value='SubjectCourse') Curso
						form#show_studentinsert.hidden_form( name='insert_new', action='insertStudent', method='post' )
							.pd_24
								.form_input
									.b_text.left_title Nombre(s)
									input(type='text', placeholder='Nombre(s)' name='insertStudentName')
								.form_input
									.b_text.left_title Apellidos
									.double
										input(type='text', placeholder='Paterno' name='insertStudentLastName')
										input.second(type='text', placeholder='Materno' name='insertStudentSecondLastName')
								.form_input
									.b_text.left_title Sexo
									select(name='insertStudentSex')
										option(value='H') Hombre
										option(value='M') Mujer
								.form_input
									.b_text.left_title Email
									input(type='email', placeholder='email@email.com' name='insertStudentEmail')
								.form_input
									.b_text.left_title Contraseña
									input(type='password', placeholder='*******' name='insertStudentPassword')
								.form_input(style='height: 52px;')
									span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
							.form_confirmblock
								.inner_confirmblock.bg_gray.flat_shadow
									.pd_24(style='padding-bottom: 16px;')
										.colhh1.white_text
											.pd_8.ll_title ¿Realizar esta acción?
									.pd_12
										.autooverflow
											span.submit_cancel.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color.b_text.hide_comfirm(type='button' value='Cancelar')
											span.raised_button.right_float.rippleria-dark(data-rippleria)
												input.txtaccent_color2.b_text(type='submit' value='Aceptar')
						form#show_teacherinsert.hidden_form( name='insert_new', action='insertTeacher', method='post' )
							.pd_24
								.form_input
									.b_text.left_title Nombre(s)
