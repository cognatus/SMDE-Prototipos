extends layout

block content

		#new_item.float_buttoncontainer( title='Nueva' )
			span.bg_plus.bgaccent_color

		.hidden_blockcontainer
			.hidden_blockback.bgaccent_color
			.hidden_block.bg_white
				span.close.bg_close.rippleria-dark( data-rippleria )
				.colhh1.bgprimary_color
					.colhh1.pd_8.bgprimary_colorDarker
					.pd_18.form_title.white_text Nueva Publicación
				.colhh1.hb_formcontainer
					form( name='students_newpublication' )
						.form_innercontainer
							.pd12_24.border_bottom.flat_shadow.bgprimary_color
								.form_input.white_text
									input.activeline.txtaccent_colorfall(type='text', placeholder='Titulo')
							.pd_24
								.form_input
									.b_text.left_title Grupo
									select
										option Grupo 1
										option Grupo 2
										option Grupo 3
										option Grupo 4
								.form_input
									.b_text Descripción
									textarea(placeholder='Descripción')
								.form_input
									.input_filecontainer
										input(type='file' name='attachedfile' id='attachedfile')
									.file_buttoncontainer
										span#trigger_fbutton.bg_attachment_white.circle.bg_cyan.flat_shadow.rippleria-dark( data-rippleria title='Adjuntar Archivo' )
										.right_float
											#file_value.ll_title.opacity_color.border_thick Seleccionar Archivo
								.form_input(style='height: 52px;')
									span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
						.form_confirmblock
							.inner_confirmblock.bg_gray.flat_shadow
								.pd_24(style='padding-bottom: 16px;')
									.colhh1.white_text
										.pd_8.ll_title ¿Realizar esta acción?
									.form_input.autooverflow
										span.submit_cancel.txtaccent_color.rippleria-dark( data-rippleria ) Cancelar
										input.txtaccent_color.rippleria-dark( data-rippleria type='submit', value='Aceptar' )
		.topspace
		.page_container
			.colhh1.block_container
				.colhh1.profile_img2
					.photo
						a( href='/profile' )
							img.circle( src='images/profilephoto.png' )
					.name
						.pd_12 
							b Nombre Completo
							span correo@email.com

			.colhh1.block_container
				.colhh1.bg_white
					.colhh1.border_bottom
						.pd_18.ll_title Asignaturas impartidas
					.colhh1
						.colhh1.empty_blocktext.center_text
							.pd_64
								span.v_middle(style= 'background-image: url("images/close-box.png")')
								.autocol.pd_12.mm_title No tienes ninguna asignatura.
						.colhh1.slide_list
							.colhh1.hover.listitem.rippleria-dark(data-rippleria)
