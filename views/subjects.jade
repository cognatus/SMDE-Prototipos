extends layout

block content
		script( type='text/javascript' src='/ajax/ajaxSubjects.js' )
		#new_item.float_buttoncontainer( title='Nueva' )
			span.bg_plus.bgaccent_color

		.hidden_blockcontainer
			.hidden_blockback.bgaccent_color
			.hidden_block.bg_white
				span.close.bg_close.rippleria-dark( data-rippleria )
				.colhh1.bgprimary_color
					.colhh1.pd_8.bgprimary_colorDarker
					.pd_18.form_title.white_text.flat_shadow Inscribir Asignaturas
				.colhh1.hb_formcontainer
					form( name='subjects_add' id='subjects_add')
						.colhh1.form_innercontainer
							.colhh1
								.colhh1.opacity_color.sub_listtitle
									.pd_18.ll_title Agregadas
									.pd_18.center_text.ll_title.normal_txt#sub_hide Agrega una asignatura para Inscribir
										.pd_8
								#added_subjects.colhh1.subjects_formlist.border_bottom
									//- Aqui van las asignaturas para agregar
							.pd_24(style='padding-bottom: 0;')
								.form_input
									.b_text.left_title Filtrar:
									.double
										select
											option Asignatura
											option Grupo
										select.second
							.colhh1
								.colhh1.opacity_color.sub_listtitle
									.pd_18.ll_title Inscribir
								#new_subjects.colhh1.subjects_formlist
									if subjectscoursesData != undefined
										each item in subjectscoursesData
											.colhh1.slide_list(data-subjectfilter='#{item.subjectName}' data-coursefilter='#{item.courseName}')
												.pd_l8.hover.listitem.rel_pos(data-subject='#{item.idSubject}' data-course='#{item.idCourse}' data-name='#{item.subjectName}')
													.listitem_righticon.circle.bg_plusgray.rippleria-dark(data-rippleria title='Agregar')
													.listitem_img
														span A
													.listitem_info
														.listitem_title 
															b #{item.subjectName}
														.listitem_bottomdata Grupo: #{item.courseName}
												.colhh1.innerlistitem
													.colhh1.border_bottom
														.list_borderleft
															.colhh1
																.pd_llist
																	.sl_title Información
																.pd_llist
																	.pd_l12.sl_title Nivel: 
																		span.margin_l.normal_txt #{item.subjectLevel}
																	.pd_4
																	.pd_l12.sl_title Academia: 
																		span.margin_l.normal_txt #{item.departmentName}
							.pd_24
								.form_input(style='height: 52px;')
									span.bgaccent_color.bg_check.submit.circle.rippleria-dark( data-rippleria )
						.form_confirmblock
							.inner_confirmblock.bg_gray.flat_shadow
								.pd_24(style='padding-bottom: 16px;')
									.colhh1.white_text
										.pd_8.ll_title ¿Realizar esta acción?
								.pd_12
									.autooverflow
										span.submit_cancel.raised_button.right_float.rippleria-dark(data-rippleria)
											input.txtaccent_color.b_text(type='button' value='Cancelar')
										span.raised_button.right_float.rippleria-dark(data-rippleria)
											input.txtaccent_color2.b_text(type='submit' value='Aceptar')


		.topspace
		.page_container
			.grid_profilebackgroundcontainer
				.block_container
					.colhh1.profile_img
						a(href='/profile')
							.photo
								img.circle( src='images/profilephoto.png' )
							.name
								.pd_18
									b #{datos[0].userName} #{datos[0].userLastName} #{datos[0].userSecondLastName}
									span #{datos[0].userEmail}

				.block_container.bg_white.progress_profile
					.pd_18
						.progress_emoticon
							#indicator.circle.bgaccent_color
							span( style='background-image: url("/images/emoticon-sad.png")' )
							span( style='background-image: url("/images/emoticon-neutral.png")' )
							span( style='background-image: url("/images/emoticon-happy.png")' )
							span
							div Tu rendimiento es muy bueno!
					.pd_18
						.ll_title Promedio General
							span#signaturegralprom.right_float.ll_title 8.21
						.colhh1.bg_lightgray.circle.inbox_shadow
							#signatureprogress.progress_bar.bgaccent_color.circle

			.grid_rightcontainer
				.colhh1.block_container.bg_white
					.pd_16.bg_lightgray
						.ll_title Mis asignaturas
					.colhh1
						#subjects_list.listcontainer
							.colhh1.empty_blocktext.center_text
								.pd_64
									span.v_middle(style= 'background-image: url("images/close-box.png")')
									.autocol.pd_12.mm_title No tienes ninguna asignatura.
							if subjectsProfileData != undefined
								each item in subjectsProfileData
									.colhh1.slide_list
										.colhh1.hover.listitem.rippleria-dark(data-name='#{item.subjectName}' data-type='#{item.courseName}')
											.listitem_img
												span A
											.listitem_info
												.listitem_rightinfo Promedio:
													label.subject_prom
												.listitem_title 
													b #{item.subjectName}
												.listitem_bottomdata.rank
													span.bg_blue
													span.bg_blue
													span.bg_blue
													span.bg_blue
													span.bg_blue
										.colhh1.innerlistitem
											.colhh1.border_bottom
												.list_borderleft
													.pd_llist
														.sl_title Información
													.pd_llist
														.colhh1.pd_l12.sl_title Grupo: 
															span.margin_l.normal_txt #{item.courseName}
														.pd_4
														.colhh1.pd_l12.sl_title Academia: 
															span.margin_l.normal_txt #{item.departmentName}
														.pd_4
														.colhh1.pd_l12.sl_title Nivel:
															span.margin_l.normal_txt #{item.subjectLevel}
				//- Si es profe
				.h_listcontainer
					.block_container.bg_white
						.colhh1.rel_pos
							.h_listline.bgaccent_color
							.h_listtopcontainer
								.h_listitem.first
									.pd_16.rippleria-dark( data-rippleria ) Asignaturas
								.h_listitem
									.pd_16.rippleria-dark( data-rippleria ) Alumnos
					.block_container.bg_white
						.colhh1.h_listindex.first
							#subjects_list.listcontainer
								.colhh1.empty_blocktext.center_text
									.pd_64
										span.v_middle(style= 'background-image: url("images/close-box.png")')
										.autocol.mm_title.pd_12 No tienes ninguna asignatura.
										.ll_title.normal_txt Presiona &nbsp; + &nbsp; para agregar asignaturas.
								if subjectsProfileData != undefined
									each item in subjectsProfileData
										.colhh1.slide_list
											.colhh1.hover.listitem.rippleria-dark(data-name='#{item.subjectName}' data-type='#{item.courseName}')
												.listitem_img
													span A
												.listitem_info
													.listitem_rightinfo Promedio:
														label.subject_prom
													.listitem_title 
														b #{item.subjectName}
													.listitem_bottomdata.rank
														span.bg_blue
														span.bg_blue
														span.bg_blue
														span.bg_blue
														span.bg_blue
											.colhh1.innerlistitem
												.colhh1.border_bottom
													.list_borderleft
														.colhh1
															.pd_llist
																.sl_title Información
															.pd_llist
																.colhh1.pd_l12.sl_title Grupo: 
																	span.margin_l.normal_txt #{item.courseName}
																.pd_4
																.colhh1.pd_l12.sl_title Academia: 
																	span.margin_l.normal_txt #{item.departmentName}
																.pd_4
																.colhh1.pd_l12.sl_title Nivel:
																	span.margin_l.normal_txt #{item.subjectLevel}
														.pd_8
														.colhh1
															.pd_llist
																.sl_title Alumnos
						.colhh1.h_listindex
							.colhh1.bg_lightgray
								.search
									span.searchicon
									input#buscar_slide(type='text',name='buscar', placeholder='Buscar un alumno')
							#listcontainer.listcontainer
								.colhh1.empty_blocktext.center_text
									.pd_64
										span.v_middle(style= 'background-image: url("images/account-remove.png")')
										.autocol.pd_12.mm_title No tienes alumnos.
								.colhh1.slide_list
									.colhh1.hover.listitem.rel_pos.rippleria-dark(data-rippleria data-name='Nombre Completo' data-type='Alumno')
										.listitem_righticon.circle.bg_editgray.rippleria-dark(data-rippleria title='Calificar')
										.listitem_img
											img(src='images/profilephoto.png')
										.listitem_info
											.listitem_title 
												b Nombre Completo
											.listitem_bottomdata Alumno

